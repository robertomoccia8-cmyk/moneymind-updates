<Window x:Class="SmartClassificationCenter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="üéØ Centro Classificazione Intelligente - MoneyMind AI" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <!-- Stili Avanzati -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E3F2FD"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1976D2" Direction="315" ShadowDepth="8" Opacity="0.15" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WizardCard" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FF"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#2196F3" Direction="315" ShadowDepth="4" Opacity="0.25" BlurRadius="12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessCard" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E8"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <Style x:Key="WarningCard" TargetType="Border">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <Style x:Key="MainTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1565C0"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="StepTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="HelpText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <Rectangle Name="PART_Track" Fill="{TemplateBinding Foreground}" 
                                     HorizontalAlignment="Left" RadiusX="4" RadiusY="4"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Contenitore principale con sfondo gradiente -->
    <Border Background="#F5F7FA" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>  <!-- Header -->
                <RowDefinition Height="*"/>   <!-- Contenuto principale -->
            </Grid.RowDefinitions>

            <!-- HEADER CON CONTROLLI FINESTRA -->
            <Border Grid.Row="0" Background="#1565C0" CornerRadius="20,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Titolo -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0">
                        <TextBlock Text="ü§ñ" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="Centro Classificazione Intelligente" 
                                   FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                        <Border Background="#4CAF50" CornerRadius="12" Padding="8,4" Margin="16,0,0,0">
                            <TextBlock Text="AI POWERED" FontSize="10" FontWeight="Bold" Foreground="White"/>
                        </Border>
                        <Button Name="BtnToggleWizard" Content="üßô‚Äç‚ôÇÔ∏è Mostra Consigli" 
                                Background="Transparent" Foreground="White" BorderThickness="1" BorderBrush="White"
                                FontSize="12" Padding="8,4" Margin="16,0,0,0" Visibility="Collapsed"
                                Click="BtnToggleWizard_Click"/>
                    </StackPanel>
                    
                    <!-- Controlli finestra -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                        <Button Name="BtnMinimize" Content="‚àí" Width="30" Height="30" 
                                Background="Transparent" Foreground="White" BorderThickness="0"
                                FontSize="16" FontWeight="Bold" Click="BtnMinimize_Click"/>
                        <Button Name="BtnClose" Content="√ó" Width="30" Height="30" 
                                Background="Transparent" Foreground="White" BorderThickness="0"
                                FontSize="20" FontWeight="Bold" Margin="8,0,0,0" Click="BtnClose_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- CONTENUTO PRINCIPALE -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    
                    <!-- GUIDA INIZIALE / WIZARD -->
                    <Border Name="WizardPanel" Style="{StaticResource WizardCard}" Visibility="Visible">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="üßô‚Äç‚ôÇÔ∏è" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Assistente Classificazione Guidata" Style="{StaticResource SectionTitle}"/>
                                <Button Name="BtnHideWizard" Content="Nascondi" Style="{StaticResource SecondaryButton}" 
                                        Margin="16,0,0,0" Padding="12,6" Click="BtnHideWizard_Click"/>
                            </StackPanel>
                            
                            <TextBlock Style="{StaticResource HelpText}">
                                <Run Text="üëã Benvenuto nel sistema di classificazione pi√π avanzato mai creato! "/>
                                <Run Text="Ti guider√≤ passo dopo passo per ottenere risultati perfetti." FontWeight="SemiBold"/>
                            </TextBlock>
                            
                            <!-- Steps guidati -->
                            <UniformGrid Columns="4" Margin="0,16,0,0">
                                <!-- Step 1: Configurazione AI -->
                                <Border Background="White" CornerRadius="8" Padding="16" Margin="4">
                                    <StackPanel>
                                        <TextBlock Text="1Ô∏è‚É£" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="Configurazione AI" FontWeight="SemiBold" FontSize="14"
                                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="Configura le chiavi API per OpenAI e Google Places nelle Impostazioni"
                                                   FontSize="12" TextAlignment="Center" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <!-- Step 2: Seleziona Metodo -->
                                <Border Background="White" CornerRadius="8" Padding="16" Margin="4">
                                    <StackPanel>
                                        <TextBlock Text="2Ô∏è‚É£" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="Seleziona Metodo" FontWeight="SemiBold" FontSize="14"
                                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="Scegli il metodo di classificazione: AI Potenziata, Solo Pattern, Offline o Manuale"
                                                   FontSize="12" TextAlignment="Center" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <!-- Step 3: Seleziona Scope -->
                                <Border Background="White" CornerRadius="8" Padding="16" Margin="4">
                                    <StackPanel>
                                        <TextBlock Text="3Ô∏è‚É£" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="Seleziona Scope" FontWeight="SemiBold" FontSize="14"
                                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="Scegli cosa classificare: Non Classificate, Tutte, Singola o Test Transazione"
                                                   FontSize="12" TextAlignment="Center" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <!-- Step 4: Avvia Classificazione -->
                                <Border Background="White" CornerRadius="8" Padding="16" Margin="4">
                                    <StackPanel>
                                        <TextBlock Text="4Ô∏è‚É£" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="Avvia Classificazione" FontWeight="SemiBold" FontSize="14"
                                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="Clicca 'Avvia Classificazione' e lascia lavorare il sistema intelligente"
                                                   FontSize="12" TextAlignment="Center" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- DASHBOARD STATISTICHE -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="üìä" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Dashboard Classificazioni" Style="{StaticResource SectionTitle}"/>
                                <Button Name="BtnRefreshStats" Content="üîÑ Aggiorna" Style="{StaticResource SecondaryButton}" 
                                        Margin="20,0,0,0" Padding="12,6" Click="BtnRefreshStats_Click"/>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Transazioni Totali -->
                                <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="12" Padding="20" Margin="0,0,12,0">
                                    <StackPanel>
                                        <TextBlock Text="üìù Transazioni Totali" FontSize="14" Foreground="#1565C0" Margin="0,0,0,8"/>
                                        <TextBlock Name="TxtTotalTransactions" Text="0" FontSize="32" FontWeight="Bold" 
                                                   Foreground="#0D47A1" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Classificate -->
                                <Border Grid.Column="1" Background="#E8F5E8" CornerRadius="12" Padding="20" Margin="6,0">
                                    <StackPanel>
                                        <TextBlock Text="‚úÖ Classificate" FontSize="14" Foreground="#2E7D32" Margin="0,0,0,8"/>
                                        <TextBlock Name="TxtClassifiedTransactions" Text="0" FontSize="32" FontWeight="Bold" 
                                                   Foreground="#1B5E20" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Non Classificate -->
                                <Border Grid.Column="2" Background="#FFF3E0" CornerRadius="12" Padding="20" Margin="6,0">
                                    <StackPanel>
                                        <TextBlock Text="‚ö†Ô∏è Da Classificare" FontSize="14" Foreground="#F57C00" Margin="0,0,0,8"/>
                                        <TextBlock Name="TxtUnclassifiedTransactions" Text="0" FontSize="32" FontWeight="Bold" 
                                                   Foreground="#E65100" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Tasso di Successo -->
                                <Border Grid.Column="3" Background="#F3E5F5" CornerRadius="12" Padding="20" Margin="12,0,0,0">
                                    <StackPanel>
                                        <TextBlock Text="üéØ Tasso Successo" FontSize="14" Foreground="#7B1FA2" Margin="0,0,0,8"/>
                                        <TextBlock Name="TxtClassificationRate" Text="0%" FontSize="32" FontWeight="Bold" 
                                                   Foreground="#4A148C" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Progress Bar Generale -->
                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="Progresso Classificazione Generale:" FontSize="14" Foreground="#666" Margin="0,0,0,8"/>
                                <ProgressBar Name="ProgressBarOverall" Style="{StaticResource ModernProgressBar}" Value="0" Maximum="100"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- COLONNA SINISTRA: CONTROLLI -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            
                            <!-- CONFIGURAZIONE AI -->
                            <Border Style="{StaticResource ModernCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <TextBlock Text="ü§ñ" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Configurazione AI" Style="{StaticResource SectionTitle}"/>
                                        <Border Name="StatusAI" Background="#F44336" CornerRadius="8" Padding="6,2" Margin="12,0,0,0">
                                            <TextBlock Name="TxtStatusAI" Text="NON CONFIGURATA" FontSize="10" 
                                                       FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    
                                    <Border Style="{StaticResource WarningCard}" Name="AIWarningPanel">
                                        <StackPanel>
                                            <TextBlock Text="‚ö†Ô∏è Per ottenere risultati ottimali, configura le API:" 
                                                       FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBlock Style="{StaticResource HelpText}">
                                                ‚Ä¢ <Run FontWeight="SemiBold">OpenAI</Run>: Per l'analisi intelligente delle transazioni<LineBreak/>
                                                ‚Ä¢ <Run FontWeight="SemiBold">Google Places</Run>: Per identificare aziende e attivit√†<LineBreak/>
                                                ‚Ä¢ Anche senza API, il sistema funziona in modalit√† offline!
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                    
                                    <Button Name="BtnOpenSettings" Content="‚öôÔ∏è Configura API Keys nelle Impostazioni"
                                            Style="{StaticResource PrimaryButton}" Margin="0,8,0,0"
                                            Click="BtnOpenSettings_Click"/>
                                </StackPanel>
                            </Border>

                            <!-- METODI DI CLASSIFICAZIONE -->
                            <Border Style="{StaticResource ModernCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <TextBlock Text="üéØ" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Metodi di Classificazione" Style="{StaticResource SectionTitle}"/>
                                    </StackPanel>
                                    
                                    <!-- Opzioni di classificazione -->
                                    <StackPanel>
                                        <RadioButton Name="RadioPatternOnly" Content="Solo Pattern Esistenti" 
                                                     GroupName="ClassificationMethod" Margin="0,0,0,12"/>
                                        <TextBlock Text="Usa solo i pattern gi√† salvati nel database (veloce, offline)"
                                                   Style="{StaticResource HelpText}" Margin="20,0,0,16"/>
                                        
                                        <RadioButton Name="RadioAIEnhanced" Content="AI Potenziata (Consigliato)" 
                                                     GroupName="ClassificationMethod" IsChecked="True" Margin="0,0,0,12"/>
                                        <TextBlock Text="Combina pattern esistenti + AI + Google Places (massima precisione)"
                                                   Style="{StaticResource HelpText}" Margin="20,0,0,16"/>
                                        
                                        <RadioButton Name="RadioOfflineOnly" Content="Solo Modalit√† Offline" 
                                                     GroupName="ClassificationMethod" Margin="0,0,0,12"/>
                                        <TextBlock Text="Funziona sempre, anche senza internet (estrazione intelligente)"
                                                   Style="{StaticResource HelpText}" Margin="20,0,0,16"/>
                                        
                                        <RadioButton Name="RadioManualOnly" Content="Classificazione Manuale" 
                                                     GroupName="ClassificationMethod" Margin="0,0,0,12"/>
                                        <TextBlock Text="Apre il pannello per classificazione manuale delle transazioni"
                                                   Style="{StaticResource HelpText}" Margin="20,0,0,16"/>
                                    </StackPanel>
                                    
                                    <!-- Opzioni avanzate -->
                                    <Expander Header="‚öôÔ∏è Opzioni Avanzate" Margin="0,16,0,0">
                                        <StackPanel Margin="20,8,0,0">
                                            <CheckBox Name="ChkAutoSavePatterns" Content="Salva automaticamente nuovi pattern" 
                                                      IsChecked="True" Margin="0,0,0,8"/>
                                            <CheckBox Name="ChkUpdateExistingPatterns" Content="Aggiorna pesi pattern esistenti" 
                                                      IsChecked="True" Margin="0,0,0,8"/>
                                            <CheckBox Name="ChkShowDetailedLog" Content="Mostra log dettagliato" 
                                                      Margin="0,0,0,8"/>
                                        </StackPanel>
                                    </Expander>
                                </StackPanel>
                            </Border>

                        </StackPanel>

                        <!-- COLONNA DESTRA: AZIONI E RISULTATI -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            
                            <!-- CONTROLLI PRINCIPALI -->
                            <Border Style="{StaticResource ModernCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <TextBlock Text="üöÄ" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Centro di Controllo" Style="{StaticResource SectionTitle}"/>
                                    </StackPanel>
                                    
                                    <!-- Selezione scope di classificazione -->
                                    <TextBlock Text="Scope di Classificazione" Style="{StaticResource StepTitle}" Margin="0,8,0,0"/>
                                    <StackPanel Margin="0,0,0,12">
                                        <RadioButton Name="RadioScopeUnmatched" Content="üìã Solo Transazioni Non Classificate"
                                                     GroupName="ClassificationScope" IsChecked="True" Margin="0,0,0,8"/>
                                        <TextBlock Text="Classifica solo le transazioni senza MacroCategoria o con 'Non Classificata'"
                                                   Style="{StaticResource HelpText}" Margin="20,0,0,8"/>

                                        <RadioButton Name="RadioScopeAll" Content="üîÑ Tutte le Transazioni (Riclassifica)"
                                                     GroupName="ClassificationScope" Margin="0,0,0,8"/>
                                        <TextBlock Text="Rimuove classificazioni esistenti e riapplica il metodo selezionato a tutte"
                                                   Style="{StaticResource HelpText}" Margin="20,0,0,8"/>

                                        <RadioButton Name="RadioScopeSingle" Content="üéØ Singola Transazione"
                                                     GroupName="ClassificationScope" Margin="0,0,0,8"/>
                                        <TextBlock Text="Apre il pannello per selezionare e classificare una singola transazione dal database"
                                                   Style="{StaticResource HelpText}" Margin="20,0,0,8"/>

                                        <RadioButton Name="RadioScopeTest" Content="üß™ Test Singola Transazione"
                                                     GroupName="ClassificationScope" Margin="0,0,0,8"/>
                                        <TextBlock Text="Testa una descrizione personalizzata senza creare pattern o modificare il database"
                                                   Style="{StaticResource HelpText}" Margin="20,0,0,8"/>

                                    </StackPanel>

                                    <!-- Pulsante principale -->
                                    <Button Name="BtnStartClassification" Content="üöÄ Avvia Classificazione"
                                            Style="{StaticResource PrimaryButton}" Margin="0,0,0,12"
                                            Click="BtnStartClassification_Click"/>

                                    <Button Name="BtnViewPatterns" Content="üìù Gestisci Pattern"
                                            Style="{StaticResource SecondaryButton}" Margin="0,0,0,12"
                                            Click="BtnViewPatterns_Click"/>
                                    
                                    <!-- Progress e Status -->
                                    <StackPanel Name="ProgressPanel" Visibility="Collapsed">
                                        <TextBlock Name="LblProgressStatus" Text="Pronto per l'avvio..." 
                                                   FontSize="14" Margin="0,0,0,8"/>
                                        <ProgressBar Name="ProgressBarClassification" Style="{StaticResource ModernProgressBar}" 
                                                     Value="0" Maximum="100" Margin="0,0,0,8"/>
                                        <TextBlock Name="LblProgressDetail" Text="" FontSize="12" Foreground="#666"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- RISULTATI ULTIMA CLASSIFICAZIONE -->
                            <Border Style="{StaticResource ModernCard}" Name="ResultsPanel" Visibility="Collapsed">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <TextBlock Text="üìà" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Risultati Ultima Classificazione" Style="{StaticResource SectionTitle}"/>
                                    </StackPanel>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0" Background="#E8F5E8" CornerRadius="8" Padding="12" Margin="0,0,6,0">
                                            <StackPanel>
                                                <TextBlock Text="‚úÖ Elaborate" FontSize="12" Foreground="#2E7D32"/>
                                                <TextBlock Name="TxtProcessed" Text="0" FontSize="20" FontWeight="Bold" Foreground="#1B5E20"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border Grid.Column="1" Background="#E3F2FD" CornerRadius="8" Padding="12" Margin="6,0,0,0">
                                            <StackPanel>
                                                <TextBlock Text="üéØ Classificate" FontSize="12" Foreground="#1565C0"/>
                                                <TextBlock Name="TxtSuccessful" Text="0" FontSize="20" FontWeight="Bold" Foreground="#0D47A1"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                    
                                    <TextBlock Name="TxtResultSummary" Text="" Margin="0,12,0,0" 
                                               FontSize="13" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- CONSIGLI DINAMICI -->
                            <Border Name="TipsPanel" Style="{StaticResource SuccessCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="üí°" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Consiglio Smart" FontWeight="SemiBold" FontSize="14"/>
                                        <Button Name="BtnNextTip" Content="‚û°Ô∏è" Background="Transparent" BorderThickness="0" 
                                                Margin="12,0,0,0" Click="BtnNextTip_Click"/>
                                    </StackPanel>
