<Window x:Class="TransazioniFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🔍 Transazioni Filtrate" 
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- Stili per i pulsanti -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#f5f5f5" Padding="15,10" BorderBrush="#ddd" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Name="TxtTitolo" Text="🔍 Transazioni Filtrate" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Name="TxtSottotitolo" Text="Filtro applicato" FontSize="12" Foreground="Gray" Margin="0,2,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Name="TxtConteggio" Text="0 transazioni" VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="Bold"/>
                    <Button Name="BtnEsporta" Content="📤 Esporta" Style="{StaticResource ModernButton}" ToolTip="Esporta transazioni in Excel"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid Transazioni -->
        <DataGrid Grid.Row="1" Name="DataGridTransazioni" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  RowHeaderWidth="0" 
                  GridLinesVisibility="Horizontal"
                  AlternatingRowBackground="#f9f9f9" 
                  Margin="10"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat=dd/MM/yyyy}" Width="80"/>
                <DataGridTextColumn Header="Descrizione" Binding="{Binding Descrizione}" Width="*"/>
                <DataGridTextColumn Header="Importo" Binding="{Binding Importo, StringFormat=C}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPositive}" Value="True">
                                    <Setter Property="Foreground" Value="Green"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsPositive}" Value="False">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Categoria" Binding="{Binding CategoriaDisplay}" Width="120"/>
                <DataGridTextColumn Header="MacroCategoria" Binding="{Binding MacroCategoriaDisplay}" Width="120"/>
                <DataGridTextColumn Header="Note" Binding="{Binding Note}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#f5f5f5" Padding="10" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Name="TxtRiepilogo" Text="Riepilogo: Totale €0,00" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="BtnChiudi" Content="❌ Chiudi" Style="{StaticResource ModernButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>